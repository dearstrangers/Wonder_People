<h3 id="appointment_form_heading"><%= I18n.t('helpers.appointment.welcome') %></h3>

<%= form_for(@appointment) do |f| %>
  <% if @appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
      <% @appointment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label I18n.t('helpers.appointment.district') %><br>
    <%= f.select :district, [[I18n.t('locations.hkisland.hkisland'), "Hong Kong Island"],[I18n.t('locations.kowloon.kowloon'), "Kowloon" ], [I18n.t('locations.newterritories.newterritories'), "New Territories"],[I18n.t('locations.islands.islands'), "Outlying Islands"]], :style => "border-radius: 5px;" %>
  </div>
  <div class="field">
    <%= f.label I18n.t('helpers.appointment.room') %><%= f.number_field :rooms, :style => "border-radius: 5px; color:black;" %>
  </div>
  <div class="field">
    <%= f.label I18n.t('helpers.appointment.bathroom') %><%= f.number_field :bathrooms, :style => "border-radius: 5px; color:black;" %>
  </div>
  <div class="field">
    <%= f.label I18n.t('helpers.appointment.big') %><%= f.number_field :size, :style => "border-radius: 5px; color:black;" %>
  </div>
  <div class="field">
    <%= f.label I18n.t('helpers.appointment.extra') %><%= f.check_box :extra_tasks %>
  </div>
  <div class="field">
    <%= f.label I18n.t('helpers.appointment.laundry') %><%= f.check_box :laundry %>
  </div>
  <div class="field">
    <%= f.label I18n.t('helpers.appointment.fridge') %><%= f.check_box :fridge %>
  </div>
  <div class="field">
    <%= f.label I18n.t('helpers.appointment.oven') %><%= f.check_box :oven %>
  </div>
  <div class="field">
    <%= f.label I18n.t('helpers.appointment.cabinets') %><%= f.check_box :cabinets %>
  </div>
  <div class="field">
    <%= f.label I18n.t('helpers.appointment.windows') %><%= f.check_box :windows %>
  </div>
  <div class="field">
    <%= f.label I18n.t('helpers.appointment.walls') %><%= f.check_box :walls %>
  </div>
  <div class="field">
    <%= f.label I18n.t('helpers.appointment.pets') %><%= f.text_field :pets, :style => "border-radius: 5px; color:black;" %>
  </div>
  <div class="field">
    <%= f.label I18n.t('helpers.appointment.cleaner') %><%= f.number_field :number_of_cleaners %>
  </div>
  <div class="field">
    <%= f.label I18n.t('helpers.appointment.duration') %><%= f.text_field :duration, :style => "border-radius: 5px; color:black;" %>
  </div>
  <div class="field">
    <%= f.label I18n.t('helpers.appointment.supplies') %><%= f.check_box :supplies %>
  </div>
  <div class="actions">
    <%= f.submit I18n.t('helpers.appointment.next'), :class => 'btn btn-warning' %>
  </div>
<% end %>
