<h3><%= I18n.t('cleaners.signup') %></h3>

<br />

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :full_name %><br />
  <%= f.text_field :full_name, :style => "border-radius: 5px; color:black;" %><br /></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, :style => "border-radius: 5px; color:black;" %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :style => "border-radius: 5px; color:black;" %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :style => "border-radius: 5px; color:black;" %></div>

  <div><%= f.label :contact_number %><br />
  <%= f.text_field :username, :style => "border-radius: 5px; color:black;" %><br /></div>

  <div><%= f.label :address %><br />
  <%= f.text_field :address, :style => "border-radius: 5px; width: 50%; color:black;" %><br /></div>
  <br />

  <div><%= f.submit "Sign up", :class => 'btn btn-warning' %></div>
<% end %>

<br />

<%= render "devise/shared/links" %>
